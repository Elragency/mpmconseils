---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import FormHero from '../components/blocks/hero/ContactHero-fr.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'
import ContactCards from '../components/blocks/contact/ContactCards-fr.astro'
import SocialProof from '../components/blocks/socialproof/Basic-fr.astro'

// Content
// - SEO
const SEO = {
	title: 'Foxi | Get in Touch with Us',
	description:
		'Have questions or need assistance? Contact Foxi today for support, inquiries, or feedback. Our team is here to help you make the most of your Foxi experience.'
}
// - Page Header
const header = {
	title: "Obtenez des réponses à vos questions gràce à <strong>L'agence MPM </strong> Questions.",
	text: "Vous souhaitez en savoir plus sur nos services ainsi que sur les possibilités qui s'offrent à vous ? Contactez nous!"
}
---

<Layout title={SEO.title} description={SEO.description}>
	<FormHero
		title={header.title}
		text={header.text}
		id="contact"
		classes="bg-neutral-50 dark:bg-neutral-950/80"
	/>
	<ContactCards classes="dark:bg-neutral-950/80" />
	<SocialProof classes="dark:bg-neutral-950/80" />
	<CTA />
</Layout>
