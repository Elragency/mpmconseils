---
// Basic Dark Call To Action section
// ------------
// Description: A centered call to action section that contains: a title, text, background image, notification and a button.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import CTA from '../../ui/CTA.astro'
import Button from '../../ui/Button.astro'
import ChipNotification from '../../ui/ChipNotification.astro'
import { Image } from 'astro:assets'
import Highlight from '../../ui/Highlight.astro'

// Content
import ctaImage from '../../../assets/cta-dark-bg.webp'
import badge from '../../../assets/badge.svg'
---

<Section>
	<Row>
		<Col span="1" />
		<Col span="10">
			<CTA
				title="Rejoignez plus de 300 clients heureux!"
				text="Prenez le contrôle de vos finances et découvrez pourquoi plus de 300 clients sont heureux avec nos services!"
				mode="dark"
				bg={ctaImage}
			>
				<ChipNotification radius="rounded-full" classes="mb-6 box">
					<Image src={badge} alt="Product of the Year" class="h-12 w-12" slot="button" />
					#1 Agence comptable et conseil, <Highlight classes="ml-2">prêt à vous servir</Highlight>
				</ChipNotification>
				<Button link="/contact" size="lg" style="primary"> Contactez-nous! </Button>
			</CTA>
			<Col span="1" />
		</Col>
	</Row>
</Section>
